{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "background": true,
            "text": true,
            "button": true,
            "link": true,
            "heading": true,
            "palette": []
        },
        "border": {
            "radius": true,
            "color": true,
            "width": true,
            "style": true
            
        },
        "dimensions": {
            "aspectRatio": true,
            "minHeight": true
        },
        "layout": {
            "contentSize": "1180px",
            "wideSize": "1440px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "customSpacingSize": true
        },
        "typography": {
            "customFontSize": true,
            "dropCap": true,
            "fluid": true,
            "fontFamilies": [
                {
                    "name": "default",
                    "slug": "Default",
                    "fontFamily": "inherit"
                }
            ],
            "fontWeight": true,
            "fontStyle": true,
            "textAlign": true,
            "textDecoration": true,
            "textTransform": true
        }
    },
    "styles": {}
}